<div class="form-main">
  <div class="form-container">
    <h3>Let's get started: </h3>
    <%= simple_form_for @activity do |f| %>
    <%= f.input :name, label: 'Name 🤗', placeholder: 'e.g. Yoga' %>
    <%= f.input :address, label: 'Activity location', placeholder: 'e.g. Rosenthaler Str. 3110178 Berlin' %>
    <%= f.input :category, label: 'Choose a category', :collection => ["🍝 Food & Drinks", "🍻 Nightlife", "🎭 Culture", "🌳 Nature", "🧘‍♀️ Wellness", "🤝 Networking", "📚 Learning"]%>
    <%= f.input :description, label: 'Describe your activity', placeholder: "e.g. Join me for yoga in Mitte" %>
    <%= f.input :datetime, label: 'Date & starting time' %>
    <%= f.input :capacity, label: 'Maximum capacity' %>
    <%= f.input :photos, label: 'Upload image for Wow factor 😍', as: :file, input_html: { multiple: true }%>
    <br>

    <%= f.button :submit, class:"btn btn-green" %>
    <% end %>
    <br>
      <%= link_to :back do %>
        <i class="fas fa-chevron-left"></i>
      <% end %>
      <br>
      <br>
  </div>
</div>


<div>
  <h3>Create a new activity: </h3>
  <%= simple_form_for @activity do |f| %>
  <%= f.input :name, label: 'Name' %>
  <%= f.input :address, label: 'Address 🏠' %>
  <%= f.input :category, label: 'Choose one category ⚽️, 🍝, 🍻, 🎭, 🌳', :collection => %w[sports food&drinks nightlife culture nature wellness networking learning] %>
  <%= f.input :description, label: 'Please describe your activity ✍️' %>
  <%= f.input :datetime, label: 'Date & starting time 📅' %>
  <%= f.input :capacity, label: 'Number of people who can join you 🧍‍♀️🧍🧍‍♂️' %>
  <%= f.input :photos, label: 'Upload images to make your Event more interesting 🖼', as: :file, input_html: { multiple: true }%>
  <br>
  <%= f.button :submit, class:"btn btn-ghost btn-lg btn-block" %>
  <br>
  <br>
  <br>
  <% end %>
  <br>
  <br>
</div>


<% @activities.each do |activity| %>
<div>
  <strong><%= link_to activity.name, activity_path(activity) %></strong>
  <br>
  <%= activity.address %>
  <br>
  Starting at: <%= activity.datetime %>
  <br>
  Capacity: <%= activity.capacity %>
  <br>
  <%= activity.bookings.count %> are going
</div>
<% end %>

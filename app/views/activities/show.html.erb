
<h1><strong> <%= @activity.name %> </strong></h1>
<br>
<% @activity.photos.each do |photo| %>
<%= cl_image_tag photo.key, height: 300, width: 400, crop: :fit %>
<% end %>
<br>
<div class="map"
    id="map"
    style="width: 100%;
    height: 600px;"
    data-marker="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
<br>
<p><%= @activity.address %></p>

Starting at: <%= @activity.datetime.strftime("%b %eth %Y, %k:%M") %>
<br>
Category: <%= @activity.category %>
<br>
Hosted by: <strong><%= link_to @activity.user.username, user_path(@activity.user) %></strong>

<!-- Contacting host link, host cannot contact himself (if else) -->
<% if @activity.user_id != current_user.id %>
  <div>
    <%= link_to "Contact host", activity_conversations_path(@activity), method: "Post" %>
  </div>
<% end %>

<br>
Capacity: <%= @activity.capacity %>
<br>
Spaces left: <%= @activity.capacity - @activity.bookings.count %>
<p>About:  <%= @activity.description %></p>
<ul>
  <% @activity.bookings.each do |booking| %>
  <li>
    <% user = User.find(booking.user_id) %>
      <% if user.photo.attached? %>
      <%= cl_image_tag user.photo.key, class: "avatar" %>
      <%#= test after profile fixted %>
      <% else %>
      <%= link_to user.username, user_path(user.id) %>
    <% end %>
  </li>
  <% end %>
</ul>

<% if policy(@activity).destroy? %>
<%= link_to "Edit", edit_activity_path, class: "btn btn-green" %>
<%= link_to "Delete", activity_path, class: "btn btn-orange", method: :delete, data: { confirm: "You sure?" } %>
<% end %>

<% if @booking.errors.any? %>
  <div class="alert">
    <% @booking.errors.full_messages.each do |message| %>
      <span>  ðŸ˜± <%= message %></span>
      <a data-dismiss="alert" aria-label="Close">
        <i class="fas fa-times"></i>
      <% end %>
  </div>
<% end %>
  <% if @booking.user != @activity.user && @booking.user != current_user %>
  <% if !policy(@activity).update? && !current_user.attending_activity?(@activity) %>
  <h1>Want to join <%= @activity.name %>? Confirm now! </h1>
  <%= link_to new_activity_booking_path(@activity), class: "btn btn-primary" do %>Join<% end %>
  <% end %>
<% end %>

<br>
<br>
<%= link_to "Back", :back %>


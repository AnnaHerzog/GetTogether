
 <h2>You currently have <%= current_user.bookings.count %> <%= pluralize current_user.bookings, "booking"%> upcoming: </h2>
 <br>

  <div class="cards cards-dashboard">
    <% if current_user.bookings.first.nil? %>
    <p> <%= link_to "Find awesome activities", root_path, class: "btn-ghost btn-dashboard" %> </p>
    <% else %>
      <% current_user.bookings.each do |booking| %>
        <div class="card-product dashboard-card">
          <% if booking.activity.photos.attached? %>
            <%= cl_image_tag booking.activity.photos.first.key, height: 300, width: 400, crop: :fill, :id => "img_booking" %>
          <% else %>
            <%= cl_image_tag("cqmszae8rere14lnciwy", width: 150, height: 150, crop: :thumb, gravity: :face) %>
            <% end %>
          <div class="card-product-infos">
            <h2 class="dashboard_h2"><%= link_to booking.activity.name, activity_path(booking.activity) %></h2>
            <p class="dashboard-p"> Date: <%=booking.activity.date %> </p>
            <p class="dashboard-p"> Address: <%= booking.activity.address %></p>
            <br>
            <%= link_to "ğŸ—‘", booking_path(booking), method: :delete, data: { confirm: "Are you sure you want to cancel this booking??" }%>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

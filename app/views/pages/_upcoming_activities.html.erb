
<% upcoming_activities = [] %>
<% current_user.bookings.each do |booking| %>
  <% if booking.activity.datetime > DateTime.now() %>
    <% upcoming_activities.push(booking.activity) %>
  <% end %>
<% end %>
<% current_user.activities.each do |activity| %>
  <% if activity.datetime > DateTime.now() %>
    <% upcoming_activities.push(activity) %>
  <% end %>
<% end %>
<% sorted_activities = upcoming_activities.sort_by {|activity| activity.datetime } %>


<h2>You currently have <%= pluralize upcoming_activities.count, "activity"%> upcoming: </h2>
  <div class="cards cards-dashboard">
    <% if sorted_activities.count == 0 %>
      <p> <%= link_to "Find awesome activities", root_path, class: "btn-ghost btn-dashboard" %> </p>
    <% else %>
      <% sorted_activities.each do |activity| %>
          <div class="card-product dashboard-card">
            <% if activity.photos.attached? %>
              <%= cl_image_tag activity.photos.first.key, height: 300, width: 400, crop: :fill, :id => "img_booking" %>
            <% else %>
              <%= cl_image_tag("cqmszae8rere14lnciwy", width: 150, height: 150, crop: :thumb, gravity: :face) %>
            <% end %>
            <div class="card-product-infos">
              <h2 class="dashboard_h2"><%= link_to activity.name, activity_path(activity) %></h2>
              <p class="dashboard-p"> Date: <%=activity.datetime %> </p>
              <p class="dashboard-p"> Address: <%= activity.address %></p>
              <% if activity.user == current_user  %>
                <%= link_to "ğŸ—‘", activity_path(activity), method: :delete, data: { confirm: "Are you sure you want to delete this activity??" }%>
              <% else %>
                <%= link_to "ğŸ—‘", booking_path(Booking.find_by(activity_id: activity.id)), method: :delete, data: { confirm: "Are you sure you want to cancel this booking??" }%>
              <% end %>
            </div>
          </div>
      <% end %>
    <% end %>
  </div>

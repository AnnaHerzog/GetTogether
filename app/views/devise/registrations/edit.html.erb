<div class="container">
  <h2>Edit Profile <%#= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :username,
                  required: true,
                  input_html: { autocomplete: "Nickname" } %>
      <%= f.input :bio,
                  required: false,
                  input_html: { autocomplete: "Bio" } %>
      <%= f.input :birthday, start_year: Date.today.year - 60, end_year: Date.today.year,
                  required: false,
                  input_html: { autocomplete: "Birthday" } %>
      <%= f.input :interest,
                  required: false,
                  hint: "Interests or hobbies",
                  input_html: { autocomplete: "Interests" } %>

      <%= f.input :current_password,
            hint: "we need your current password to confirm your changes",
            required: true,
            input_html: { autocomplete: "current-password" } %>
      <%= f.input :photo, as: :file %>
    </div>

    <div class="form-actions">

      <%= f.button :submit, "Update", class: "btn btn-green" %>

    </div>
  <% end %>
    <br>
    <p>Want out? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    <p> <%= link_to "Back", :back %> </p>
    <br>
</div>
